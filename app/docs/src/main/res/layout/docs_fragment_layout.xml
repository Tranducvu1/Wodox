<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.wodox.docs.ui.DocViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorF5F5F5">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <EditText
                        android:id="@+id/etDocTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Untitled document"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvLastSaved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All changes saved"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivOpenFromDrive"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_folder_open" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivSave"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_cloud_upload" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivShare"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_12"
                    app:tint="@color/black"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_share" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivMore"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_more_vert" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.Toolbar>

        <!-- ✅ THÊM LinearLayout wrap formattingToolbar -->
        <LinearLayout
            android:id="@+id/llEditingTools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <HorizontalScrollView
                android:id="@+id/formattingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:scrollbars="none">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_8">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivUndo"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_undo" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivRedo"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_redo" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@android:color/darker_gray" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivBold"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_format_bold" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivItalic"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_format_italic" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivUnderline"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_format_underlined" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivStrikethrough"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_format_strikethrough" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:background="@android:color/darker_gray" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivVideo"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_video" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivImage"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_image_picker_docs_image" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:background="@android:color/darker_gray" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivHighlight"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_format_color_text" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivFont"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_font" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNumber"
                        style="@style/FormattingButton"
                        android:text="24"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_18"
                        app:tint="@color/black" />

                    <com.wodox.common.view.colorpicker.TextSizePopupView
                        android:id="@+id/tvTextSize"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="@drawable/bg_number_picker"
                        android:elevation="@dimen/dp_12"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/optionMenuView"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivTextColor"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_format_color_fill" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@android:color/darker_gray" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivAlignLeft"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_format_align_left" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivAlignCenter"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_format_align_center" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivAlignRight"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_format_align_right" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@android:color/darker_gray" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivBulletList"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_format_list_bulleted" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivNumberList"
                        style="@style/FormattingButton"
                        android:src="@drawable/ic_format_list_numbered" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </HorizontalScrollView>

        </LinearLayout>

        <!-- ✅ SỬA constraint: top to llEditingTools -->
        <LinearLayout
            android:id="@+id/llInvitedUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@android:color/white"
            android:padding="12dp"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llEditingTools"
            app:layout_constraintBottom_toTopOf="@id/scrollView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Những người được chia sẻ"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInvitedUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="horizontal" />

        </LinearLayout>

        <!-- ✅ SỬA constraint: top to llInvitedUsers -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            android:padding="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llInvitedUsers">

            <com.wodox.docs.extention.MyRichEditor
                android:id="@+id/richEditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_editor"
                android:clipToOutline="true"
                android:elevation="@dimen/dp_4"
                android:minHeight="@dimen/dp_500"
                android:padding="@dimen/dp_16" />

        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>