<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.wodox.common.ui.menuview.MenuOption" />

        <variable
            name="menus"
            type="java.util.ArrayList&lt;MenuOption&gt;" />

    </data>

    <com.wodox.common.ui.menuview.ShadowView
        style="@style/Theme.AIBuddy.Shadow.Default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_1"
        app:sv_dx="@dimen/dp_0_5"
        app:sv_dy="@dimen/dp_2"
        app:sv_mask="@drawable/bg_corner_12">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_popup_window"
            tools:layout_height="@dimen/dp_100">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menuRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:items="@{menus}" />

        </FrameLayout>

    </com.wodox.common.ui.menuview.ShadowView>
</layout>