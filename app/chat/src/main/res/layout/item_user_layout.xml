<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.wodox.domain.user.model.User" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_2"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_20"
        app:cardElevation="@dimen/dp_3"
        app:strokeColor="#E8E8E8"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_18"
            android:paddingTop="@dimen/dp_18"
            android:paddingEnd="@dimen/dp_18"
            android:paddingBottom="@dimen/dp_18">

            <FrameLayout
                android:id="@+id/avatarContainer"
                android:layout_width="@dimen/dp_68"
                android:layout_height="@dimen/dp_68"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/avatarRing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_avatar_ring" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_white" />

                <View
                    android:id="@+id/onlineStatus"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:background="@drawable/bg_online_status"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/userInfoLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_12"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/avatarContainer"
                app:layout_constraintEnd_toStartOf="@id/actionsLayout"
                app:layout_constraintStart_toEndOf="@id/avatarContainer"
                app:layout_constraintTop_toTopOf="@id/avatarContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.003"
                        android:maxLines="1"
                        android:text="@{user.name}"
                        android:textColor="#0F172A"
                        android:textSize="@dimen/sp_17" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvUserStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:textColor="#64748B"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone"
                    tools:text="Software Developer â€¢ Da Nang"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/mutualFriendsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:alpha="0.7"
                        android:src="@drawable/ic_people"
                        app:tint="#64748B" />

                    <TextView
                        android:id="@+id/tvMutualFriends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:fontFamily="sans-serif"
                        android:textColor="#64748B"
                        android:textSize="@dimen/sp_13"
                        tools:text="12 mutual friends" />
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/actionsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/avatarContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/avatarContainer">

                <!-- Accept Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/acceptCard"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/dp_22"
                    app:cardElevation="@dimen/dp_3"
                    app:strokeWidth="0dp"
                    tools:visibility="visible">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_button_accept_gradient">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivAccept"
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check"
                            app:tint="@android:color/white" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/rejectCard"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/dp_22"
                    app:cardElevation="@dimen/dp_3"
                    app:strokeWidth="0dp"
                    tools:visibility="visible">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_button_reject_gradient">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivReject"
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_close"
                            app:tint="@android:color/white" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>