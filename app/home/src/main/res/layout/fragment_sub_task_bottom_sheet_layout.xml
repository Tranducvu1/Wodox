<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.wodox.ui.task.taskdetail.subtask.SubTaskViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rounded_top_home"
            android:clipToOutline="true"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_16">

                        <TextView
                            android:id="@+id/tvParentTask"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:alpha="0.6"
                            android:letterSpacing="0.02"
                            android:text="@{viewModel.currentTask.title}"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/sp_13"
                            app:layout_constraintEnd_toStartOf="@id/ivClose"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Personal List" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivClose"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/ic_close"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/black" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:text="Subtask Title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_16">

                        <com.wodox.common.view.colorpicker.AppEditText
                            android:id="@+id/etTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edit_text"
                            android:fontFamily="@font/baloo2_bold"
                            android:hint="Enter subtask title"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:maxLines="3"
                            android:padding="@dimen/dp_16"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray_text"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edit_text"
                            android:fontFamily="@font/baloo2_bold"
                            android:hint="Enter subtask title"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:maxLines="3"
                            android:padding="@dimen/dp_16"
                            android:text="@{viewModel.uiState.subTasks.title}"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray_text"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:text="Description (Optional)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.wodox.common.view.colorpicker.AppEditText
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edit_text"
                            android:gravity="top|start"
                            android:hint="Add description..."
                            android:lineSpacingExtra="4dp"
                            android:minHeight="@dimen/dp_100"
                            android:padding="@dimen/dp_16"
                            android:textColor="@color/color2B2B2B"
                            android:textColorHint="#9E9E9E"
                            android:textSize="@dimen/sp_15"
                            android:visibility="gone"
                            tools:text="Sample description" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edit_text"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:minHeight="@dimen/dp_100"
                            android:padding="@dimen/dp_16"
                            android:text="@{viewModel.uiState.subTasks.description}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"
                            android:visibility="gone"
                            tools:text="Subtask description sample" />

                    </FrameLayout>

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_2"
                    android:background="#F3F4F6" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="8dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/primary" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="287dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="@string/add_dates"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="@color/gray_icon" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6" />

                    <LinearLayout
                        android:id="@+id/llItemMenuPriority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imgPriorityIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="@color/primary" />

                        <TextView
                            android:id="@+id/tvPrioritySelected"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imgPriorityClose"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_close"
                            app:tint="@color/gray_icon" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6" />

                    <LinearLayout
                        android:id="@+id/llPriority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:src="@drawable/ic_flag"
                            app:tint="@color/gray_icon" />

                        <TextView
                            android:id="@+id/tvPriority"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Priority"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textColor="@color/gray_text"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="@color/gray_icon" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6" />

                    <LinearLayout
                        android:id="@+id/llAttachments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:src="@drawable/ic_attachment"
                            app:tint="@color/gray_icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Attachments"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="@color/gray_icon" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAttachments"
                        items="@{viewModel.uiState.attachments}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:nestedScrollingEnabled="false" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tvCreate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/bg_corner_12"
            android:backgroundTint="@color/primary"
            android:clickable="true"
            android:elevation="@dimen/dp_4"
            android:focusable="true"
            android:fontFamily="@font/baloo2_bold"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="Create Subtask"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>