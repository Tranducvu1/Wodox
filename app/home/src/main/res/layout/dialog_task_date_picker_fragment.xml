<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.wodox.ui.task.taskdetail.dialogDayPicker.TaskDatePickerViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_round"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_48"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/start_date"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDueDate"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_48"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/due_date"
                android:textColor="@color/purple_600"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tvToday"
                style="@style/QuickChip"
                android:layout_marginEnd="@dimen/dp_2"
                android:text="@string/today" />

            <TextView
                android:id="@+id/tvTomorrow"
                style="@style/QuickChip"
                android:layout_marginEnd="@dimen/dp_2"
                android:text="@string/tomorrow" />

            <TextView
                android:id="@+id/tvNextWeek"
                style="@style/QuickChip"
                android:layout_marginEnd="@dimen/dp_2"
                android:text="@string/next_week" />

            <TextView
                android:id="@+id/tvWeekend"
                style="@style/CustomTransparentBackgroundDialog"
                android:text="@string/this_weekend" />
        </LinearLayout>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:theme="@style/MyCalendarStyle"
            android:weekDayTextAppearance="@style/MyCalendarWeekText" />

        <TextView
            android:id="@+id/tvAddTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/bg_rounded"
            android:backgroundTint="@color/colorE3F2FD"
            android:drawablePadding="8dp"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/add_time"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvCancel"
                style="@style/DialogCancelButton"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@drawable/bg_format"
                android:text="@string/cancel" />

            <TextView
                android:id="@+id/tvDone"
                style="@style/DialogPrimaryButton"
                android:layout_marginStart="@dimen/dp_8"
                android:background="@drawable/bg_done_16"
                android:text="@string/done" />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
